@model List<Tarefa>

    <h1>Lista de Tarefas</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Tarefa</th>
                <th>Concluída</th>
                <th>Açoes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model)
            {
                <tr>
                    <td> @tarefa.Descricao </td> 
                    <td> @(tarefa.Concluida == true ? "Sim" : "não")</td>
                    <td> 
                        <a asp-action="Editar" asp-route-id="@tarefa.Id">Editar</a> 
                        <a asp-action="Deletar" asp-route-id="@tarefa.Id">Deletar</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Adicionar" class="btn btn-primery"> Adicionar nova tarefa  </a>